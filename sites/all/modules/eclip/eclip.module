 * Build otros medios button 
 */
function eclip_build_otros_medios_link_v2($environment, $base, $clip, $nids = array()) {
  $output = '';
  $nodes  = node_load_multiple($nids);
  if(!empty($nodes)){
    $output.= '<div class="toggle-related-items" article="' . $clip . '">';
    $output.= l(t('[Ver misma noticia en otros medios]'), '', array('external' => TRUE, 'fragment' => ' '));
    $output.= '</div>';
    $output.= '<div class="related-items" article="' . $clip . '">';
    foreach ($nodes as $noticia) {
      if(isset($noticia->field_medio['und'][0]['tid'])){
        $term  = taxonomy_term_load($noticia->field_medio['und'][0]['tid']);
        $medio = $term->name;
      } else {
        $medio = _eclip_theme_render_field($noticia, $noticia->field_fuente, 'field_fuente');
      }
      $related_args = array_combine($nids, $nids);
      $related_args[$clip] = $clip;
      unset($related_args[$noticia->nid]);
      $output.= '<div class="related-item">' . l($noticia->title . ' - (' . $medio . ')', $environment . '/' . $base . '/' . $clip . '/' . $noticia->nid, array('query' => array('related' => implode('-', $related_args)))) . '</div>';
    }
    $output.= '</div>';
  }
  return $output;
  //dpm($nodes);
}

function eclip_get_related_news($clip) {
  $query = db_select('eclip_article_data', 'a');
  $query->leftJoin('node', 'n', 'a.article_id = n.nid');
  $query->leftJoin('field_data_field_medio', 'm', 'm.entity_id = n.nid AND (m.entity_type = :type AND m.deleted = :deleted)', array(':type' => 'node', ':deleted' => 0));
  $query->leftJoin('taxonomy_term_data', 't', 't.tid = m.field_medio_tid');
  $query
      ->fields('a', array('article_data_id', 'clip_nid'))
      ->fields('n', array('title'))
      ->fields('t', array('name'))
      //->condition('a.clip_nid', $clip->clip_nid)
      ->condition('a.status', '1')
      ->condition('a.grupo', $clip->grupo)
      ->condition('a.grupo', 0, '<>')
      ->condition('a.cat_tid', $clip->cat_tid)
      ->condition('a.clip_nid', $clip->clip_nid)
      ->condition('a.article_data_id', $clip->article_data_id, '<>');
  return $query->execute()->fetchAll();
}

function eclip_get_related_news_v2($article_data_id = NULL) {
  $related  = array();
  $clip     = eclip_load($article_data_id);

  $query = db_select('eclip_article_data', 'a');
  $query->leftJoin('node', 'n', 'a.article_id = n.nid');
  $query->leftJoin('field_data_field_medio', 'm', 'm.entity_id = n.nid AND (m.entity_type = :type AND m.deleted = :deleted)', array(':type' => 'node', ':deleted' => 0));
  $query->leftJoin('taxonomy_term_data', 't', 't.tid = m.field_medio_tid');
  $query
      ->fields('n', array('nid'))
      ->condition('a.status', '1')
      ->condition('a.grupo', $clip->grupo)
      ->condition('a.grupo', 0, '<>')
      ->condition('a.cat_tid', $clip->cat_tid)
      ->condition('a.clip_nid', $clip->clip_nid)
      ->condition('a.article_data_id', $clip->article_data_id, '<>');
  $result = $query->execute()->fetchAll();
  foreach ($result as $noticia) {
    $related[$noticia->nid] = $noticia->nid;
  }
  return $related;
}

