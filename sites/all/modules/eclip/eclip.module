/**
 * Send clip via email
 */
function eclip_send_clip($node, $type = 'test') {
  $cliente = node_load($node->field_cliente['und'][0]['target_id']);
  if($type == 'send'){    
    $to =_eclip_theme_render_field($cliente, $cliente->field_email_to, 'field_email_to');
    $cc =_eclip_theme_render_field($cliente, $cliente->field_email_cc, 'field_email_cc');
  }else{
    $to = variable_get('eclip_main_email', 'gerardocadau@gmail.com');
  }
  $from = variable_get('eclip_main_email_from', 'clipping@e-clip.cl');
  $template       = node_load($node->field_theme['und'][0]['target_id']);
  $template_name  = $template->field_email_template['und'][0]['value'];
  // Subject
  if(isset($cliente->field_page_title['und'][0]['value'])){
    $subject = $cliente->field_page_title['und'][0]['value'] . ' ' . date('d/m/Y');
  } else {
    $subject = $node->title;
  }  
  $message = array(
    'id'      => 'clipper_key',
    'from'    => $from,
    'to'      => $to,
    'subject' => $subject,    
    'body'    => theme($template_name, array('node' => $node, 'news' => _eclip_get_news_by_clip($node->nid))),
    'headers' => array(
    	'Content-Type' => 'text/html; charset=UTF-8',
      'From' => $from,
      'Sender' => $from,
      'Return-Path' => $from,
     ),   //needed
  ); 
  if(isset($cc)){
    $message['headers']['CC'] = $cc;
  }

  $system = drupal_mail_system('eclip', 'key');

  try {
    if($system->mail($message)){
      drupal_set_message('E-mail enviado.');  
    }else{
      drupal_set_message('No se ha podido enviar el E-mail.', 'error');  
    }
  } catch (Exception $e) {
    drupal_set_message($e->getMessage(), 'error');      
  }
}

/**
 * Helper function to render a field
 */
function _eclip_theme_render_field($entity, $field, $field_name, $key = 0){
  $items = field_get_items('node', $entity, $field_name);
  if(isset($items[$key])){
    $value = field_view_value('node', $entity, $field_name, $items[$key]);
    return render($value);
  }
}

