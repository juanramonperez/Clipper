/**
 * Helper function to print images from url
 */
function _eclip_theme_file($url, $style = 'default', $download = true){    
    $url = url('sites/default/files/upload/' . $url, array('absolute' => TRUE));
    $image_types = array('image/jpg', 'image/jpeg', 'image/png', 'image/gif');
    $video_types = array('video/mp4');
    $audio_types = array('audio/mpeg', 'audio/mp4', 'audio/ogg', 'audio/vorbis');
    if(file_exists($url)){
        $mime = file_get_mimetype($url);
        
        if(in_array($mime, $image_types)){
            $output = '<div class="file-container">';
            $output.= theme('image', array('path' => $url));
            if($download){
              $output.= '<div style="clear: both;">' . '<a class="button-print" title="' . t('Imprimir') . '" onClick="window.print(); return false;">' . t('Imprimir') . '</a>' . l(t('Descargar imagen'), $url, array('attributes' => array('title' => t('Descargar imagen'), 'class' => array('button-download'), 'target' => '_blank'))) . '</div>';
            }
            $output.= '</div>';
            return $output;
        }
        if(in_array($mime, $video_types)){
          $output = '<div class="file-container">';
          $output.= '<a class="flowplayer" href="' . $url . '" style="display:block;width:600px;height:450px;"></a>';
          if($download){
            $output.= '<div style="clear: both;">' . l(t('Descargar video'), $url, array('attributes' => array('title' => t('Descargar video'), 'class' => array('button-download'), 'target' => '_blank'))) . '</div>';
          }
          $output.= '</div>';
          return $output;
        }
        if(in_array($mime, $audio_types)){
          $output = '<div class="file-container">';
          $output.= '<a class="flowplayer-audio" href="' . $url . '" style="display:block;width:600px;height:30px;"></a>';
          if($download){
            $output.= '<div style="clear: both;">' . l(t('Descargar audio'), $url, array('attributes' => array('title' => t('Descargar audio'), 'class' => array('button-download'), 'target' => '_blank'))) . '</div>';
          }
          $output.= '</div>';
          return $output;
        }                
    }
}

